!!!
%head
  %script{:src => "/js/jquery-1.4.2.min.js", :type => "text/javascript"}  
  %script{:src => "/js/jquery-ui-1.8.4.custom.min.js", :type => "text/javascript"}
  %title SlideMirror. Through the looking glass.
  %link{:href => "/style.css", :rel => "stylesheet", :type => "text/css"}
  
%body{:style => "margin: 0; padding: 0; background: #ddd;"}
  .content{:style => 'width: 865px; margin: auto; padding-top: 20px'}
    .graybox{:style => 'padding: 30px; width: 800px; margin: 5px 0; background: #eee; border: 1px solid #ccc; border-radius: 10px 10px 0 0'}
      %h1{:style => "display: block; padding: 10px; text-align: center; font-size: 3em; margin: auto"}
        %img{:src => "/images/slidesink-small.png", :style => 'vertical-align: middle; width: 64px; height: 64px; padding-right: 25px'}
        = @selected_user.name
    .graybox.50{:style => 'display: inline-block; padding: 30px; width: 365px; background: #eee; border: 1px solid #ccc; margin: 0; border-radius: 0 0 0 10px; vertical-align: text-top;'}
      %h3 Name: #{@selected_user.name}
      %h3 Website: #{@selected_user.website || "none"}
      %br
      %h3 About Me:
      
      .indent{:style => "margin-left: 25px"}= @selected_user.about || "None"
      
    .graybox.50{:style => 'display: inline-block; padding: 30px; width: 365px; margin: 0; margin-left: 4px; background: #eee; border: 1px solid #ccc; border-radius: 0 0 10px 0; vertical-align: text-top;'}
      #{@selected_user.name}'s Recent Presentations:
      %br
      %br
      .indent{:style => "margin-left: 50px"}
        -@shows.each do |show|
          %p
            %a{:href => "/show/" + show.url, :style => "font-weight: bold;"}= show.title
            = Time.parse(show.date_created).strftime("%B %e") unless show.date_created.nil?