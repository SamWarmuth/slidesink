%head
  %title Sign up for Slidemirror
  %script{:src => "/js/jquery-1.4.2.min.js", :type => "text/javascript"}  
  %script{:src => "/js/jquery-ui-1.8.4.custom.min.js", :type => "text/javascript"}
  %title SlideMirror. Through the looking glass.
  %link{:href => "/style.css", :rel => "stylesheet", :type => "text/css"}
%body{:style => "background: #444 url('/images/dark-noise.png')"}
  .content
    .secondary_pages_content{:style => "padding-top: 30px;"}
      %form{:action => "/signup", :method => "post", :style => "font-size: 14px;  width: 600px; margin: 30px auto; padding: 50px 50px; border: 1px solid #ddd;text-align: center; box-shadow: #aaa 0 0 10px; -webkit-box-shadow: #aaa 0 0 10px; -moz-box-shadow: #aaa 0 0 10px; background: #fff; border-radius: 2px;"}
        .title{:style => 'text-align: center; padding: 0; margin-bottom: 50px'}
          %h1{:style => "font-weight: bold;font-size: 2.1em;"} Sign Up for Slide Mirror
        .indent{:style => "text-align: center"}
          %p
            %label.signup-label{:for => "name"} Name
            %input.signup-textfield#name.any_text{:type => "text", :name => "name"}
          %p
            %label.signup-label{:for => "email"} Email Address
            %input.signup-textfield#email.any_text{:type => "text", :name => "email"}
          %p
            %label.signup-label{:for => "password"} Password
            %input.signup-textfield#password.any_text{:type => "password", :name => "pass1"}
          %p
            %label.signup-label{:for => "password"} Repeat Password
            %input.signup-textfield#password.any_text{:type => "password", :name => "pass2"}
        
        %input.awesome.green.giant{:type => "submit", :value => "Create Your Account", :style => "text-align: center; margin: 20px; margin-left: 53px; padding: 15px 25px; font-weight: bold; font-size: 2.5em"}
        
        
          
    .clear_container
    %br
    %br
:javascript
  $(document).ready(function(){
    $(".any_text").blur(function(){
      if ($(this).val() != "") {
        $(this).removeClass("invalid-input").addClass("valid-input");
      } else {
        $(this).removeClass("valid-input").addClass("invalid-input");
      }
    });
  });