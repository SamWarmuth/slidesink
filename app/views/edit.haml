    %input{:name => "show_id", :value => @show.id, :type => "hidden"}
    %label{:for => "title", :style => 'margin-right: 3px; margin-left: 10px'} Title
    %input#title.textfield{:name => "title", :type => "text", :value => @show.title, :style => "width: 150px"}
